<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Sponsors"
            android:fontFamily = "sans-serif-medium"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Sponsor 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sponsor1_logo"
                android:contentDescription="Sponsor 1 Logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:fontFamily = "sans-serif-medium"
                android:textStyle = "bold"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="1st Sponsor \n www.Sponsor1.com"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Sponsor 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:fontFamily = "sans-serif-medium"
                android:textStyle = "bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="2nd Sponsor \n www.Sponsor2.com"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Sponsor 2 Logo"
                android:src="@drawable/sponsor2_logo" />
        </LinearLayout>

        <!-- Sponsor 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Sponsor 3 Logo"
                android:src="@drawable/sponsor3_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:fontFamily = "sans-serif-medium"
                android:textStyle = "bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="3rd Sponsor \n www.Sponsor3.com"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- Sponsor 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:fontFamily = "sans-serif-medium"
                android:textStyle = "bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="4th Sponsor \n www.Sponsor4.com"
                android:textSize="18sp"
                android:gravity="end|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Sponsor 4 Logo "
                android:src="@drawable/sponsor4_logo" />
        </LinearLayout>
        <!-- Sponsor 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sponsor5_logo"
                android:contentDescription="Sponsor 2 Logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:fontFamily = "sans-serif-medium"
                android:textStyle = "bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="5th Sponsor \n www.Sponsor5.com"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- Sponsor 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:fontFamily = "sans-serif-medium"
                android:textStyle = "bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="6th Sponsor \n www.Sponsor6.com"
                android:textSize="18sp"
                android:gravity="end|center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Add more sponsors as needed -->

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="Sponsor 2 Logo"
                android:src="@drawable/sponsor6_logo" />

        </LinearLayout>
        <Button
            android:id="@+id/buttonSponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Become A Sponsor"
            android:padding="16dp"
            android:layout_marginTop="8dp" />

        <!-- Add more sponsors as needed -->

    </LinearLayout>
</ScrollView>
